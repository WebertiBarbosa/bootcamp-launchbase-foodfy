{% extends "layout.njk" %}
    
        {% block content %}

        <section class="cards">
            {% for item in items %}
            <div class="card" id="burger.png">
                <div class="card-image-container">
                    <img src="{{item.image}}" alt="imagem de {{item.title}}">
                </div>
                <div class="card-content" id="{{item.title}}">
                    <h4>{{item.title}}</h4>
                </div>
                <div class="card-info">
                    <h3>{{item.author}}</h3>
                </div>
            </div>

            {% endfor %}

            
        </section>
    </section>
    {% endblock %}

    <!-- MODAL -->

    <div class="modal-overlay">
        <div class="cards2">
            <div class="card2">
                <a class="close-modal">
                    <p id="close">Fechar modal</p>
                </a>
                <div class="modal-content">
                    <img src="" alt="">
                </div>
                <div class="modal-card-content">
                    <h4></h4>
                </div>
                <div class="modal-card-info">
                    <h3></h3>
                </div>
                
            </div>
        </div>
    </div>
    
    
    
    <script src="scripts.js"></script>
</body>
</html>